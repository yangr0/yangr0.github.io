.footer-section {
  width: 100%;
  padding-left: 1rem;
  padding-right: 1rem;
  border-color: #262626;
  border-top-width: .1rem;
  display: flex;
  justify-content: center;
}

.footer-content p {
  font-size: 1rem;
  margin-top: 3rem;
  margin-bottom: 3rem;
  color: #9f9f9f;
  text-align: center;
}

.footer-content a {
  color: white;
}

@media only screen and (max-width: 480px) {
  .footer-content p {
    padding-left: 2rem;
    padding-right: 3rem;
    margin-top: 2rem;
    font-size: .8rem;
  }
}
